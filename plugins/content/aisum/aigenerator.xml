<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="content" method="upgrade" version="5.0">
    <name>plg_content_aigenerator</name>
    <version>1.0.1</version>
    <description>Generates AI-powered summaries for articles with AJAX and caching</description>
    <author>Your Name</author>
    <creationDate>2023-11-15</creationDate>
   

    <namespace path="src">Joomla\Plugin\Content\Aigenerator</namespace>
    
    <files>
        <folder plugin="aigenerator">services</folder>
        <folder>src</folder>
        <folder>language</folder>
    </files>
    
    <media destination="plg_content_aigenerator" folder="media">
        <folder>js</folder>
    </media>
    
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="enabled"
                    type="radio"
                    label="PLG_CONTENT_AIGENERATOR_ENABLED"
                    default="1"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
                <field
                    name="api_key"
                    type="text"
                    label="PLG_CONTENT_AIGENERATOR_API_KEY"
                    description="PLG_CONTENT_AIGENERATOR_API_KEY_DESC"
                    filter="raw"
                    size="60"
                />
                
                <field
                    name="cache_time"
                    type="text"
                    label="PLG_CONTENT_AIGENERATOR_CACHE_TIME"
                    description="PLG_CONTENT_AIGENERATOR_CACHE_TIME_DESC"
                    default="15"
                    filter="int"
                />
                
                <!-- Other fields remain the same as previous version -->
                <!-- ... -->
            </fieldset>
        </fields>
    </config>
</extension>