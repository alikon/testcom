<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="webservices" method="upgrade">
		<name>plg_webservices_jobs</name>
		<author>Joomla! Project</author>
		<creationDate>October 2019</creationDate>
		<copyright>(C) 2005 - 2020 Open Source Matters. All rights reserved.</copyright>
		<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
		<authorEmail>admin@joomla.org</authorEmail>
		<authorUrl>www.joomla.org</authorUrl>
		<version>4.0.0</version>
		<description>PLG_WEBSERVICES_INSTALLER_XML_DESCRIPTION</description>
		<files>
		<filename plugin="jobs">jobs.php</filename>
		</files>
	<languages>
		<language tag="en-GB">language/en-GB/plg_webservices_installer.ini</language>
		<language tag="en-GB">language/en-GB/plg_webservices_installer.sys.ini</language>
	</languages>
		<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="restverbs"
					type="list"
					label="PLG_WEBSERVICES_CONTENT_ALLOWEDVERBS_LABEL"
					multiple="true"
					default="GET"
					layout="joomla.form.field.list-fancy-select"
					>
					<option value="GET">GET</option>
				</field>
				<field
					name="public"
					type="radio"
					label="PLG_WEBSERVICES_CONTENT_PUBLIC_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="boolean"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
