<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="plugin" group="job" method="upgrade">
	<name>plg_job_jobtwo</name>
	<author>Joomla! Project</author>
	<creationDate>May 2018</creationDate>
	<copyright>Copyright (C) 2005 - 2018 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.9.0</version>
	<description>PLG_JOB_JOBONE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="jobtwo">jobtwo.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB.plg_job_jobone.ini</language>
		<language tag="en-GB">en-GB.plg_job_jobone.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="timeout"
					type="integer"
					label="PLG_JOB_JOBONE_TIMEOUT_LABEL"
					description="PLG_JOB_JOBONE_TIMEOUT_DESC"
					first="0"
					last="120"
					step="1"
					default="30"
					filter="int"
					validate="number"
				/>

				<field
					name="lastrun"
					type="hidden"
					default="0"
					filter="integer"
				/>
				<field
					name="unit"
					type="list"
					label="PLG_JOB_JOBONE_UNIT_LABEL"
					description="PLG_JOB_JOBONE_UNIT_DESC"
					default="86400"
					filter="integer"
				>
					<option value="60">PLG_JOB_JOBONE_MINUTE</option>
					<option value="3600">PLG_JOB_JOBONE_HOUR</option>
					<option value="86400">JDAY</option>
				</field>
				<field
					name="taskid"
					type="hidden"
					default="0"
					size="15"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
